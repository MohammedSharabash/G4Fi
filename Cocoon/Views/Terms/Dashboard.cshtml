@model G4Fit.Models.ViewModels.HTMLContentVM
    @{ 
        Layout = "~/Views/Dashboard/Layout.cshtml";
        ViewBag.Title = "الشروط والاحكام";
    }
<div class="panel panel-primary">
    <div class="panel-body">
        @using (Html.BeginForm("Dashboard", "Terms", FormMethod.Post))
        {
            <h3>الشروط والاحكام باللغة العربية:</h3>
            <br />
            @Html.TextAreaFor(w => w.ContentAr, new { id = "tiny" })
            <br />
            <h3>الشروط والاحكام باللغة الانجليزية:</h3>
            <br />
            @Html.TextAreaFor(w => w.ContentEn, new { id = "tiny" })

            <button type="submit" class="btn btn-success">حفظ</button>
        }
    </div>
</div>