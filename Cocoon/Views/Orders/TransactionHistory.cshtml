@model G4Fit.Models.Domains.Order
@{
    Layout = "~/Views/Dashboard/Layout.cshtml";
    ViewBag.Title = "سجل عمليات الدفع للطلب رقم " + Model.Code;
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-fw fa-shopping-cart"></i> @ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive text-center">
            <table id="table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>TranId</th>
                        <th>PaymentId</th>
                        <th>ECI</th>
                        <th>Result</th>
                        <th>TrackId</th>
                        <th>ResponseCode</th>
                        <th>AuthCode</th>
                        <th>RRN</th>
                        <th>responseHash</th>
                        <th>amount</th>
                        <th>cardBrand</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.PaymentTransactionHistories.OrderByDescending(s => s.CreatedOn))
                    {
                    <tr>
                        <td>
                            @order.TranId
                        </td>
                        <td>
                            @order.PaymentId
                        </td>
                        <td>
                            @order.ECI
                        </td>
                        <td>
                            @order.Result
                        </td>
                        <td>
                            @order.TrackId
                        </td>
                        <td>
                            @order.ResponseCode
                        </td>
                        <td>
                            @order.AuthCode
                        </td>
                        <td>
                            @order.RRN
                        </td>
                        <td>
                            @order.responseHash
                        </td>
                        <td>
                            @order.amount
                        </td>
                        <td>
                            @order.cardBrand
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
